<%- include('./partials/head.ejs') %> 
<body>
	<!-- Header -->
	
	<%- include('./partials/headerLogueado.ejs') %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="container">
				<form action="/users/editprofile/<%= user.id %>" method="POST" class="formulario">
					<ul> 
						
						<li><label class="form-label" for="text">Edite su nombre de usuario: </label></li> 
						<li><input class="form-label" type="text" name="nombre" value="<%= user.nombre %>"  required ></li>
						<li><label class="form-label" for="password">Edite su contrase√±a:  </label></li> 
						<li><input class="form-label" type="password" name="contrasena" value=""  required </li>
						<li><label class="form-label" for="date">Edite fecha de nacimiento: </label></li> 
						<li><input class="form-label" type="date" name="fecha" value="<%= user.fecha %> " ></li> <!-- No funciona asi, ya que con tipo fecha hay que hacer mas cambios -->
						<li><label class="form-label" for="number">Edite su DNI:</label></li> 
						<li><input class="form-label" type="number" name="dni" value="<%= user.dni %>" ></li>
						<li><label class="form-label" for="">Edite su foto de perfil: </label></li> 
						<li><input class="form-label" type="text" name="fotoDeperfil" value="<%= user.fotoDeperfil %> " ></li>
						<button class="botonFormulario" type="submit">Guardar cambios</button>
					</ul>
	
					</form>
			</div>


	<!-- footer -->
	<%- include('./partials/footer.ejs') %> 
	<!-- /footer -->
</body>

</html>