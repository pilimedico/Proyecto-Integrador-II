<%- include('./partials/head.ejs') %> 
<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado.ejs') %> 
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2"> 
				<img src= ' <%= user.foto %>' alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= user.usuario %>
						<a href="/users/editprofile">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>10 productos</li>
						<li>200 seguidores</li>
						<li>5 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < 5; i++) {  %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
				  
				  <a href="/products/detalle/id/<%= products[i].id %>  "> 
					<figure class="product-box_image">
					  <img src= '<%= products[i].cover %>' alt=<%= products[i].nombre%> >
					</figure>
					<article class="product-box_data">
					   <h2> <%= products[i].nombre   %> </h2>
					  <p>Descripción: <%= products[i].descripcion %></p>
					  <p>Comentarios:<%= products[i].comentarios %> </p>
					</article>
				  </a>
				</section>
			  </div>
				
			  <% }  %>
			  <% for (let i = 5; i < 10; i++) {  %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
				  
				  <a href="/products/detalle/id/<%= products[i].id %>  "> 
					<figure class="product-box_image">
					  <img src= '<%= products[i].cover %>' alt=<%= products[i].nombre%> >
					</figure>
					<article class="product-box_data">
					   <h2> <%= products[i].nombre   %> </h2>
					  <p>Descripción: <%= products[i].descripcion %></p>
					  <p>Comentarios:<%= products[i].comentarios %> </p>
					</article>
				  </a>
				</section>
			  </div>
				
			  <% }  %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer.ejs') %> 
	<!-- /footer -->
</body>	
</html>