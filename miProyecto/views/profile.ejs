<%- include('./partials/head.ejs') %> 
<body>
	<!-- Header -->
	<% if (locals.username != undefined) { %>
			<%- include('./partials/headerLogueado.ejs') %>  
	<% } else{%>
			<%- include('./partials/header.ejs') %>  
	<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2"> 
				<img src= ' <%= user.fotoDeperfil %>' alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">

					<h1 class="main-title"> <%= user.nombre %>
						
					</h1>
			
		
			 



              
					
				</div>
				<div>
					<ul class="">
						<li> <%= products.length %>  productos</li>
						<li>200 seguidores</li>
						<li>5 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
	<!-- Show mis productos -->
			<% for (let i = 0; i < products.length; i++) {  %>
        <div class="col-12 col-sm-6 col-lg-3">
        <section class="product-box">
          
          <a href="/products/detalle/id/<%= products[i].id %>  "> 
            <figure class="product-box_image">
              <img src= '<%= products[i].cover %>' alt=<%= products[i].nombre%> >
            </figure>
            <article class="product-box_data">
               <h2> <%= products[i].nombre   %> </h2>
              <p>Descripci√≥n: <%= products[i].descripcion %></p>
              <p>Comentarios:<%= products[i].comentarios %> </p>
            </article>
          </a>
        </section>
      </div>
        
      <% }  %>
			
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer.ejs') %> 
	<!-- /footer -->
</body>	
</html>