<%- include('./partials/head.ejs') %> 
<body>
	<!-- Header -->
	<%- include('./partials/header.ejs') %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < products.length; i++) {  %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
				  
					<a href="/products/detalle/id/<%= products[i].id %>  "> 
					<figure class="product-box_image">
					  <img src= '<%= products[i].cover %>' alt=<%= products[i].nombre%> >
					</figure>
		
					<article class="product-box_data">
					   <h2> <%= products[i].nombre   %> </h2>
					  <p>Descripción: <%= products[i].descripcion %></p>
					</a>
					  
					</article>
		
				  
				</section>
			  </div>
				
			  <% }  %>


	<!-- footer -->
	<%- include('./partials/footer.ejs') %> 
	<!-- /footer -->
</body>

</html>